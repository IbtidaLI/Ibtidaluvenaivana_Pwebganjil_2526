    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pendaftaran Calon Mahasiswa Baru</title>
        <style>
        table {
            margin: auto;
            border-collapse: collapse;
            width: 800px;
            background-color: #fff;
        }

        td {
            padding: 10px;
            vertical-align: top;
        }

        input[type="text"], select {
            width: 80%;
            padding: 5px;
        }

        .judul {
            text-align: center;
            font-weight: bold;
            font-size: 18px;
        }

        .tombol {
            text-align: center;
        }
    </style>

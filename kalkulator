<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membuat Caltulator</title>
    <style>
        body {
            align-items: center;
            height: 100vh;
            font-family: Arial;
        }
        .kalkulator {
            background-color: white;
            text-align: center;
        }
        .input {
            margin-bottom: 20px;
        }
        input {
            width: 150px;
            padding: 5px;
            margin-top: 5px;
        }
        .tombol {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="kalkulator">
        <h3>Membuat Calculator</h3>
        <hr>
        <div class="input">
    <label>Bilangan 1:</label>
    <input type="text" id="b1"><br><br>
    <label>Bilangan 2:</label>
    <input type="text" id="b2"><br><br>
        </div>
        <hr>
        <div class="tombol">
    <button onclick="tambah()">+</button>
    <button onclick="kurang()">-</button>
    <button onclick="kali()">*</button>
    <button onclick="bagi()">/</button>
    <button onclick="clear()">C</button>
        </div>
    </div>

    <script languange="JavaScript">
        var b1, b2, c;
        function getInput() {
            b1 = parseInt(document.getElementById("b1").value);
            b2 = parseInt(document.getElementById("b2").value);
        }
        function tambah() {
            getInput();
            c = b1 + b2;
            alert("Hasil Penjumlahan: " + c);
        }
        function kurang() {
            getInput();
            c = b1 - b2;
            alert("Hasil Pengurangan: " + c);
        }
        function kali() {
            getInput();
            c = b1 * b2;
            alert("Hasil Perkalian: " + c);
        }
        function bagi() {
            getInput();
            if (b2 === 0) {
                alert("Tidak bisa dibagi dengan angka 0");
            } else {
                c = b1 / b2;
                alert("Hasil Pembagian: " + c);
            }
        }
        function clear() {
            document.getElementById("b1").value = "";
            document.getElementById("b2").value = "";
            document.getElementById("output").innerText = "";
        }
    </script>
</body>
</html>
